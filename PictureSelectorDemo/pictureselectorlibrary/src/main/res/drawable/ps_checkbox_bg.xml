<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/spacing_one" />
                    <stroke android:width="1.5dp" android:color="@color/white_normal" />
                </shape>
            </item>
            <item android:drawable="@drawable/ps_checked" android:gravity="center" />

        </layer-list>
    </item>

    <item android:state_selected="false">
        <shape>
            <corners android:radius="@dimen/spacing_one" />
            <stroke android:width="1.5dp" android:color="@color/white_normal" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/spacing_one" />
            <stroke android:width="1.5dp" android:color="@color/white_normal" />
        </shape>
    </item>
</selector>